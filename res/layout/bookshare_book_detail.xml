<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:id="@+id/book_detail_view"
    android:focusable="true"
	android:background="#000000">

		<TextView
		    android:id="@+id/bookshare_book_detail_heading"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="#4A4A4A"
		    android:text="Book Details"
		    android:textColor="#ffffff"
		    android:textSize="20dip"
		    android:textStyle="bold" />

							<TextView
								android:id="@+id/bookshare_book_detail_title"
								android:text="Title: "
								android:textStyle="bold"
								android:textColor="#ffffff"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingBottom="4dip"
                                android:focusable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

							<TextView
								android:id="@+id/bookshare_book_detail_authors"
								android:text="Author(s): "
								android:textStyle="bold"
								android:textColor="#ffffff"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingBottom="3dip"
                                android:focusable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

						<Button
							android:id="@+id/bookshare_btn_download"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
                            android:layout_marginTop="20dip"
                            android:layout_marginBottom="10dip"
							android:text="@string/book_details_download_button"
							android:textStyle="bold"
                            android:focusable="true"/>

						<TextView
						    android:id="@+id/bookshare_download_not_available_msg"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_marginBottom="20dip"
						    android:focusable="true"
						    android:text="You must sign in to Bookshare to download this book."
						    android:textColor="#ffffff"
						    android:textSize="16dip"
						    android:textStyle="bold"
						    android:typeface="serif" />

						<CheckBox
						    android:id="@+id/bookshare_chkbx_subscribe_periodical"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:text="@string/subscription_chk_box" />

						<TextView
						    android:id="@+id/bookshare_subscribe_explained"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_marginBottom="20dp"
						    android:text="@string/subscribe_chkbox_description"
						    android:textAppearance="?android:attr/textAppearanceSmall" />

						<TextView
						    android:id="@+id/bookshare_share_with_friends"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:text="@string/share_with_friends"
						    android:textAppearance="?android:attr/textAppearanceMedium"
						    android:textSize="16dip"
						    android:textStyle="bold"
						    android:typeface="serif" />

						<LinearLayout
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content"
						    android:layout_gravity="center"
						    android:layout_marginBottom="25dp"
						    android:layout_marginTop="10dp"
						    android:gravity="center" >

							<Button
							    android:id="@+id/fb_share"
							    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:layout_gravity="center"
							    android:layout_marginLeft="5dp"
							    android:layout_marginRight="5dp"
							    android:background="@drawable/fb_share"
							    android:paddingTop="30dp"
							    android:tag="Facebook"
							    android:text="@string/facebook_str"
							    android:textSize="1dp" />

							<Button
							    android:id="@+id/twtr_share"
							    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:layout_gravity="center"
							    android:layout_marginLeft="5dp"
							    android:layout_marginRight="5dp"
							    android:background="@drawable/twtr_share"
							    android:gravity="center_horizontal"
							    android:tag="Twitter"
							    android:text="@string/twitter_str"
							    android:textSize="1dp" />

						</LinearLayout>
					
							<TextView
								android:id="@+id/bookshare_book_detail_isbn"
								android:text="ISBN: "
								android:textColor="#ffffff"
								android:textStyle="bold"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingBottom="4dip"
                                android:focusable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
							<TextView
								android:id="@+id/bookshare_book_detail_language"
								android:text="Language:  "
								android:textColor="#ffffff"
								android:textStyle="bold"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingBottom="4dip"
                                android:focusable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
							<TextView
								android:id="@+id/bookshare_book_detail_category"
								android:text="Category: "
								android:textColor="#ffffff"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingBottom="4dip"
								android:textStyle="bold"
                                android:focusable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
							<TextView
								android:id="@+id/bookshare_book_detail_publish_date"
								android:text="@string/bookshare_book_detail_publish_date"
								android:textColor="#ffffff"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingBottom="4dip"
								android:textStyle="bold"
                                android:focusable="true"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"/>
							<TextView
								android:id="@+id/bookshare_book_detail_publisher"
								android:text="Publisher: "
								android:textColor="#ffffff"
								android:textSize="16dip"
								android:typeface="serif"
								android:textStyle="bold"
								android:paddingBottom="4dip"
                                android:focusable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
							<TextView
								android:id="@+id/bookshare_book_detail_copyright"
								android:text="Copyright: "
								android:textColor="#ffffff"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingBottom="3dip"
								android:textStyle="bold"
                                android:focusable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
						<TextView
								android:id="@+id/bookshare_book_detail_synopsis_text"
								android:text="Synopsis: "
                                android:textColor="#ffffff"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingTop="3dip"
								android:paddingBottom="3dip"
								android:layout_marginBottom="5dip"
                                android:textStyle="bold"
                                android:focusable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
								android:singleLine="false"/>

</LinearLayout>